# ═══════════════════════════════════════════════════════════════
# 🗄️ DATABASE
# ═══════════════════════════════════════════════════════════════
DATABASE_URL="postgresql://user:password@localhost:5432/tampa_credit_repair"
DIRECT_URL="postgresql://user:password@localhost:5432/tampa_credit_repair"

# ═══════════════════════════════════════════════════════════════
# 🔐 AUTHENTICATION
# ═══════════════════════════════════════════════════════════════
NEXTAUTH_SECRET="your-secret-key-min-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-key"

# ═══════════════════════════════════════════════════════════════
# 💳 STRIPE
# ═══════════════════════════════════════════════════════════════
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ═══════════════════════════════════════════════════════════════
# 💰 MYFREESCORENOW
# ═══════════════════════════════════════════════════════════════
MFSN_API_BASE="https://api.myfreescorenow.com/api"
MFSN_EMAIL="your_email@example.com"
MFSN_PASSWORD="your_password"
MFSN_AID="YourAffiliateID"

# ═══════════════════════════════════════════════════════════════
# 🦊 DISPUTEFOX
# ═══════════════════════════════════════════════════════════════
DISPUTEFOX_API_KEY="Fox_your_api_key"
DISPUTEFOX_EMAIL="your_email@example.com"
DISPUTEFOX_PASSWORD="your_password"
DISPUTEFOX_LOGIN_URL="https://pulse.disputeprocess.com/jsp/client/login.jsp"

# ═══════════════════════════════════════════════════════════════
# 📧 TWILIO (SMS)
# ═══════════════════════════════════════════════════════════════
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# ═══════════════════════════════════════════════════════════════
# 📨 RESEND (Email)
# ═══════════════════════════════════════════════════════════════
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@tampabaycreditrepair.com"

# ═══════════════════════════════════════════════════════════════
# 🤖 AI SERVICES
# ═══════════════════════════════════════════════════════════════
OPENAI_API_KEY="sk-proj-your_openai_key"
ANTHROPIC_API_KEY="sk-ant-api03-your_anthropic_key"

# ═══════════════════════════════════════════════════════════════
# ☁️ CLOUDFLARE R2 (File Storage)
# ═══════════════════════════════════════════════════════════════
R2_ACCOUNT_ID="your_account_id"
R2_ACCESS_KEY_ID="your_access_key"
R2_SECRET_ACCESS_KEY="your_secret_key"
R2_BUCKET_NAME="tampa-bay-credit-repair"
R2_PUBLIC_URL="https://files.tampabaycreditrepair.com"

# ═══════════════════════════════════════════════════════════════
# 🔍 MONITORING (Sentry)
# ═══════════════════════════════════════════════════════════════
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project"
NEXT_PUBLIC_SENTRY_DSN="https://your_sentry_dsn@sentry.io/project"

# ═══════════════════════════════════════════════════════════════
# 📊 ANALYTICS
# ═══════════════════════════════════════════════════════════════
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_FB_PIXEL_ID="your_facebook_pixel_id"

# ═══════════════════════════════════════════════════════════════
# 🔧 REDIS (Caching & Sessions)
# ═══════════════════════════════════════════════════════════════
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ═══════════════════════════════════════════════════════════════
# 🚀 DEPLOYMENT
# ═══════════════════════════════════════════════════════════════
NODE_ENV="development"
API_URL="http://localhost:8000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# ═══════════════════════════════════════════════════════════════
# 🔐 SECURITY
# ═══════════════════════════════════════════════════════════════
ENCRYPTION_KEY="your-32-character-encryption-key"
CORS_ORIGIN="http://localhost:3000"

# ═══════════════════════════════════════════════════════════════
# 📝 APPLICATION
# ═══════════════════════════════════════════════════════════════
APP_NAME="Tampa Bay Credit Repair"
APP_URL="https://tampabaycreditrepair.com"
SUPPORT_EMAIL="support@tampabaycreditrepair.com"
